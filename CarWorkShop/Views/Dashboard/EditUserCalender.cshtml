@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

@model CarWorkShop.ViewModels.CalenderViewModel

<div class="container">
    <div class="jumbotron text-center bg-primary text-white">
        <h1 class="display-4 fw-normal">You Accepted Tickets</h1>
    </div>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var item in Model.AcceptedTickets)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm" style="background-color: lightblue;">
                            <div class="card-body">
                                <h5 class="card-title">@item.Brand - @item.Model</h5>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        @* <a type="btn btn-success" asp-controller="Dashboard" asp-action="AddSlot" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Add Slot</a>
                                    <a asp-area="" asp-controller="Dashboard" asp-action="EditSlot" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Change Slot</a>
                                    <a asp-area="" asp-controller="Dashboard" asp-action="DeleteSlot" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete Slot</a> *@
                                        @if (@item.StateCategory.ToString() != "Done" && @item.StateCategory.ToString() != "Closed")
                                        {
                                            <a asp-area="" asp-controller="Dashboard" asp-action="Finish" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Finish</a>
                                            <a asp-controller="Ticket" asp-action="CalenderDetail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View Time</a>
                                        }
                                    </div>
                                    <small class="text-muted">@item.StateCategory</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
